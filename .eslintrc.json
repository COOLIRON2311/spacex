{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            1,
            "always"
        ],
        "indent": [
            "warn",
            4
        ],
        "space-before-function-paren": "off",
        "camelcase": "off",
        "no-undef": "off",
        "curly": "off"
    }
}
